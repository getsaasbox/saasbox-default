doctype html
html(lang='en')
  include common/head.pug
  +head("Reset Your Password")
  body.antialiased.bg-body.text-body.font-body
    div
      include common/navbar.pug
      +navbar()
      section.min-h-screen.py-10.bg-gray-50
        .container.mx-auto.px-4
          .max-w-xl.mx-auto
            .mb-10
              a.text-3xl.font-bold.leading-none(href='#')
                img.h-12.mx-auto(src=thisApp.ImageUrl) alt width='auto')
            .p-6.lg_p-12.mb-6.bg-white.shadow.rounded
              .mb-6
                span.text-gray-500 Password Reset Form
                h3.text-2xl.font-bold Change Your Password
              form(action='/user/reset-password' + (redirect ? "?redirect=" + redirect : ""), method='POST')
                .mb-3.flex.p-4.bg-gray-50.rounded
                  input.w-full.text-xs.bg-gray-50.outline-none(placeholder='Please enter your new password', required=true, name='newPassword', type='password', value='', style='background-image: url("data:image/png;base64,"); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;')
                  svg.h-6.w-6.ml-4.my-auto.text-gray-500(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                    path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207')
                .mb-6.flex.p-4.bg-gray-50.rounded
                  input.w-full.text-xs.text-gray-500.bg-gray-50.outline-none(placeholder='Re-enter your password to confirm', required=true, name='confirmPassword', type='password', value='', style='background-image: url("data:image/png;base64,"); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;')
                  button(type="submit")
                    svg.h-6.w-6.ml-4.my-auto.text-gray-300(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                      path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 12a3 3 0 11-6 0 3 3 0 016 0z')
                      path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z')
                .text-center
                  button(type="submit").mb-2.w-full.py-4.bg-pink-600.hover_bg-pink-700.rounded.text-sm.font-bold.text-gray-50.transition.duration-200 Change
                  span.text-gray-400.text-xs
                    span Forgot Password? 
                    a.text-purple-600.hover_underline(href='/user/reset-password-email') Reset Password
            p.text-xs.text-center.text-gray-400
              a.underline.hover_text-gray-500(href='#') Policy privacy
              |  and 
              a.underline.hover_text-gray-500(href='#') Terms of Use
          .mt-4.grid.grid-cols-4.gap-y-6.gap-x-4.sm_grid-cols-6
            if success_message
              .sm_col-span-6
                .rounded-md.bg-green-50.p-4.mb-2
                  .flex
                    .flex-shrink-0
                      svg.h-5.w-5.text-green-400(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor")
                        path(fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd")
                    .ml-3
                      h3.text-sm.leading-5.font-medium.text-green-800
                        | #{success_message}
      include common/footer-simple.pug
      +footer_simple()